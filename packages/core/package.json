{
  "name": "@stitchjs/core",
  "version": "0.1.1",
  "author": "Kyedo <hey@kyedo.dev> (https://github.com/itskyedo)",
  "license": "MIT",
  "description": "An experimental 2D graphics library for building applications with the Canvas API",
  "keywords": [
    "2d",
    "javascript",
    "typescript",
    "graphics",
    "canvas"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itskyedo/stitchjs.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "formatcheck": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lintfix": "eslint --fix",
    "check": "npm run formatcheck && npm run typecheck && npm run lint",
    "fix": "npm run format && npm run lintfix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@itskyedo/eslint-config": "^0.2.0",
    "@stitchjs/layout": "*",
    "@stitchjs/tsconfig": "*",
    "eslint": "^9.18.0",
    "tsup": "^8.3.5",
    "typescript": "5.7.3"
  }
}
